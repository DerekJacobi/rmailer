<!DOCTYPE html>
<html ng-app='mailer'>
  <head>
    <meta charset="utf-8">
    <meta name=viewport content="width=device-width, initial-scale=1">
    <title>Rebel Mail Mailer</title>

  </head>
  <body ng-controller="MailController as MailCtrl">
    <form>
      <input type="text" placeholder="to" name="email.to">
      <input type="text" placeholder="from" name="email.from">
      <input type="text" placeholder="subject" name="email.subject">
      <input type="text" placeholder="message" name="email.message">
      <button class="btn btn-default" ng-click='MailCtrl.sendMail(email)'>Send Mail</button>
    </form>
    <h4 style="margin-left: 35%;">Todays Date: {{today}}</h4>
    <div style="display: flex">
      <div style="width: 45%;">

        <div>
          <h3>Rebel Mail HTTP Mailbox for User 1</h3>
          <button class="btn btn-default" ng-click='MailCtrl.getMail(1)'>Get Mail</button>
        </div>

        <div>
          <div id="mailbox">
            <ul>
              <li ng-repeat="mail in userMail">From: {{mail.from}} Subject: {{mail.subject}} Sent: {{mail.sent}}</li>
            </ul>
          </div>
        </div>
      </div>

      <div style="width: 45%;">

        <div>
          <h3>Rebel Mail HTTP Mailbox for User 2</h3>
          <button class="btn btn-default" ng-click='MailCtrl.getMail(2)'>Get Mail</button>
        </div>

        <div>
          <div id="mailbox">
            <ul>
              <li ng-repeat="mail in userMail">Subject: {{mail.subject}} Sent: {{mail.sent}}</li>
            </ul>
          </div>
        </div>
      </div>
    </div>


    <link rel="stylesheet" href="./css/style.css"
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" >
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <!-- AngularJS -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src='./mail.js'></script>

  </body>
</html>
